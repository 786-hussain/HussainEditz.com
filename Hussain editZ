  <script>
    const text = "Hi, I'm Hussain – Editor | Designer | Creator";
    let i = 0;
    function type() {
      if (i < text.length) {
        document.getElementById("typing-text").innerHTML += text.charAt(i);
        i++;
        setTimeout(type, 80);
      }
    }
    type();
  </script>
